{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Debug Parser",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceFolder}/GLYPHIC",
        "args": ["testfile.glyph"],
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}",
        "environment": [],
        "externalConsole": false,
        "MIMode": "gdb",
        "setupCommands": [
          {
            "description": "Enable pretty-printing for gdb",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
          }
        ]
      },
      {
        "name": "Debug Mac",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceFolder}/GLYPHIC",
        "args": ["rpsls.glyph"],
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}",
        "environment": [],
        "externalConsole": false,
        "MIMode": "lldb",
        "setupCommands": [
          {
            "description": "Enable pretty-printing for gdb",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
          }
        ]
      }
    ]
  }
  